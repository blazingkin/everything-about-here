<% if !@data[:nasa_img].blank? %>
    <div class="nasa-img center text-center" style="width: 90%;">
        <div class="row">
            <div class="col-12">
                <%= image_tag @data[:nasa_img] %>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                NASA Image Taken <%= @data[:nasa_img_date] %>
            </div>
        </div>
    </div>
<% end %>